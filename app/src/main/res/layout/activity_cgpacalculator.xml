<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cgpacalculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ab681ea4"
    tools:context="com.example.baker.cgpacalculator.CGPACalculatorActivity">

    <TextView
        android:text="Calculate CGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#b4c3127c" />

    <TextView
        android:text="Enter Cumulative Grade Points:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtCumulativeGradePoints"
        android:textSize="18sp"
        android:textColor="#c3b0147c" />

    <EditText
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginLeft="70sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/txtCumulativeGradePoints"
        android:layout_alignLeft="@+id/txtTotalQualityPoints"
        android:layout_alignStart="@+id/txtTotalQualityPoints"
        android:id="@+id/eTxtCumulativeGradePoints" />

    <TextView
        android:text="Enter Cumulative Crdit Hours :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:layout_below="@+id/eTxtCumulativeGradePoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtCumulativeCrditHours"
        android:textSize="20sp"
        android:textColor="#c3b0147c" />

    <EditText
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginLeft="70sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/txtCumulativeCrditHours"
        android:layout_alignLeft="@+id/txtTotalQualityPoints"
        android:layout_alignStart="@+id/txtTotalQualityPoints"
        android:id="@+id/eTxtCumulativeCrditHours" />

    <Button
        android:text="Calculate CGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_button"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/btnCalculateCGPA"
        android:textColor="#b4c3127c"
        android:layout_below="@+id/eTxtCumulativeCrditHours"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="CGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b4c3127c"
        android:layout_below="@+id/btnCalculateCGPA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textSize="20sp"
        android:id="@+id/txtCGPA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_button"
        android:layout_alignBottom="@+id/txtCGPA"
        android:layout_alignLeft="@+id/eTxtCumulativeCrditHours"
        android:layout_alignStart="@+id/eTxtCumulativeCrditHours"
        android:id="@+id/txtCurrentGradePointAverage" />


</RelativeLayout>
