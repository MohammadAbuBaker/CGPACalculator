<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gpacalculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ab681ea4"
    tools:context="com.example.baker.cgpacalculator.GPACalculatorActivity">

    <TextView
        android:text="Calculate GPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#b4c3127c" />

    <TextView
        android:text="Enter Total Quality Points :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtTotalQualityPoints"
        android:textSize="20sp"
        android:textColor="#c3b0147c" />

    <EditText
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginLeft="70sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/txtTotalQualityPoints"
        android:layout_alignLeft="@+id/txtTotalQualityPoints"
        android:layout_alignStart="@+id/txtTotalQualityPoints"
        android:id="@+id/eTxtTotalQualityPoints" />

    <TextView
        android:text="Enter Crdit Hours :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:layout_below="@+id/eTxtTotalQualityPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtTotalCrditHours"
        android:textSize="20sp"
        android:textColor="#c3b0147c" />

    <EditText
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_marginLeft="70sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/txtTotalCrditHours"
        android:layout_alignLeft="@+id/txtTotalQualityPoints"
        android:layout_alignStart="@+id/txtTotalQualityPoints"
        android:id="@+id/eTxtTotalCrditHours" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/txtGradePointAverage"
        android:layout_alignBaseline="@+id/txtGpa"
        android:layout_alignBottom="@+id/txtGpa"
        android:layout_toRightOf="@+id/txtGpa"
        android:layout_toEndOf="@+id/txtGpa"
        android:textSize="30sp" />

    <Button
        android:text="Calculate GPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@drawable/round_corner_button"
        android:layout_below="@+id/eTxtTotalCrditHours"
        android:layout_alignLeft="@+id/txtGpa"
        android:layout_alignStart="@+id/txtGpa"
        android:layout_marginTop="24dp"
        android:textColor="#c3b0147c"
        android:id="@+id/btnCalculateGpa" />

    <TextView
        android:text="GPA :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGpa"
        android:textColor="#c3b0147c"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />
</RelativeLayout>
