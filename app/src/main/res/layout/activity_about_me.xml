<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ab681ea4"
    tools:context="com.example.baker.cgpacalculator.AboutMeActivity">

    <TextView
        android:text="About ME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#b4c3127c"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b4c3127c"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:layout_below="@+id/imgMyPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="bakeriiuc@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b4c3127c"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/textView6"
        android:textSize="20sp" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b4c3127c"
        android:layout_marginTop="46dp"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:srcCompat="@drawable/my_pic"
        android:id="@+id/imgMyPic"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Mohmmad Abu Baker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b4c3127c"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imgMyPic"
        android:layout_alignStart="@+id/imgMyPic" />

</RelativeLayout>
